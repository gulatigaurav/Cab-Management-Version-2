

<%= form_for(cab , html: { role: 'form' }) do |f| %>

<% if cab.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(cab.errors.count, "error") %> prohibited this cab from being saved:</h2>

    <ul>
    <% cab.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
 <div class="text-center">
 <%= image_tag("2.png", height: '350', width: '500') %>
</div>
 <br>
 <div class="form-group">
   <%= f.label :name %>
   <%= f.text_field :name , autofocus: true, class: 'form-control', placeholder: 'Enter the Name of your Cab' %>
 </div>
 <div class="form-group">
   <%= f.label :reg_no %>
   <%= f.text_field :reg_no, class: 'form-control', placeholder: 'Enter the Registeration Number' %>
 </div>
 <div class="form-group">
   <%= f.label :source %>
   <%= f.text_field :source, class: 'form-control', placeholder: 'Enter the pickup area' %>
 </div>
 <div class="form-group">
   <%= f.label :seats%>
   <%= f.text_field :seats, class: 'form-control', placeholder: 'Number of seats in your cab' %>
 </div>
 <div class="form-group">
   <%= f.label :aircond%>
   <%= f.text_field :aircond, class: 'form-control', placeholder: 'Amswer in True or False' %>
 </div>

 <div class="form-group">
   <%= f.label :monthly_rental%>
   <%= f.number_field :monthly_rental, class: 'form-control' %>
 </div>

  <%= f.button "Click here", class: 'btn btn-primary btn-block', data: { disable_with: " <i class='fa fa-spinner fa-spin'></i>  Wait... "} %>
<% end %>
