<style>
@import url('https://fonts.googleapis.com/css?family=Secular+One');
</style>


<h1 class="custom_font1 text-center">All Availabe Cabs</h1>
     <% @cabs.each do |cab| %>
   <div class="text-center col-md-6 col-md-offset-3">
<div class="well">
  <div class="well-title">
    <h3 class="custom_font1"> <%=  cab.name  %> </h3>
    </div>
    <div class="well-body">
      <br>
      <%= link_to 'Show', cab, class: "btn btn-primary" %>
    <% if cab.user == current_user %>
      <%= link_to 'Edit', edit_cab_path(cab), class: "btn btn-warning" %>
      <%= link_to 'Destroy', cab, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %>
      <% end %>
    </div></div>
    </div>
    <% end %>
<br>
