<h1>All Availabe Cabs</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cabs.each do |cab| %>
      <tr>
        <td><%= link_to 'Show', cab %></td>
      <% if cab.user == current_user %>
        <td><%= link_to 'Edit', edit_cab_path(cab) %></td>
        <td><%= link_to 'Destroy', cab, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
