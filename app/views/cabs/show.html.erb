<div class="text-center">
<div class="well">
<div class="cabs show">
	<h2> SHOW  CAB  </h2>
   <h3>Driver Email Id: <%= @cab.user.email %></h3>
<div class="list-group">
  <a href="#" class="list-group-item">CAR NAME                 :<%=@cab.name %></a>
  <a href="#" class="list-group-item">MONTHLY FARE             : <%=@cab.monthly_rental%></a>
  <a href="#" class="list-group-item">REGISTERATION NUMBER     : <%=@cab.reg_no%></a>
<a href="#" class="list-group-item">TOTAL SEATS               : <%=@cab.seats%></a>
<a href="#" class="list-group-item">AIR CONDITIONING PRESENT  :<%=@cab.aircond  ? 'True' : 'False' %></a>

 <a href="#" class="list-group-item">SOURCE     : <%=@cab.source%></a>
 <a href="#" class="list-group-item">SERVICE AREA    :  <%= @cab.service_area %> </a>

<a href="#" class="list-group-item">  ROUTE FOLLOWED     : <%= @cab.via   if @cab.via%></a>

<a href="#" class="list-group-item">DESTINATION     :  NCU GURGAON </a>
</div>



   <% if current_user == @cab.user %>
	 <%= link_to 'Edit', edit_cab_path(@cab),class: "btn btn-warning" %> |
	 <%= link_to 'Back', cabs_path,class: "btn btn-info" %> |
	 <%= link_to 'Delete', "#",class: "btn btn-danger" %>
	 <% elsif current_student %>
	 <%= link_to 'Book Now', '#',class: "btn btn-success" %> |
	 <%= link_to 'Back', cabs_path,class: "btn btn-info" %>
	 <% else %>
	 <%= link_to 'Back', cabs_path,class: "btn btn-info" %>


	 <% end %>



</div>
</div>
